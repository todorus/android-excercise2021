<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.todorus.exercise2021.ui.product.detail.items.viewholders.TitleViewHolder" />
    </data>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textResource="@{viewModel.titleRes}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header"
        android:textAppearance="@style/App.TextAppearance.Title"
        android:layout_marginTop="@dimen/margin_title_top"
        android:layout_marginBottom="@dimen/margin_title_bottom"
        tools:text="Product Title" />

</layout>